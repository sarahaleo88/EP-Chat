{
  "extends": ["next/core-web-vitals"],
  "root": true,
  "env": {
    "browser": true,
    "es2022": true,
    "node": true
  },
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module",
    "ecmaFeatures": {
      "jsx": true
    }
  },
  "rules": {
    "prefer-const": "warn",
    "no-var": "error",
    "no-console": ["warn", { "allow": ["error", "warn"] }],
    "eqeqeq": "warn",
    "curly": "warn"
  },
  "ignorePatterns": [
    "node_modules/",
    ".next/",
    "out/",
    "dist/",
    "coverage/",
    "*.config.js",
    "*.config.ts"
  ]
}
