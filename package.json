{
  "name": "ep-enhanced-prompt",
  "version": "1.0.0",
  "description": "EP Chat - Ultra-lightweight prompt enhancement web application for Claude Code generation",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "build:clean": "node scripts/clean-build.js",
    "start": "next start",
    "lint": "next lint",
    "test": "vitest",
    "test:watch": "vitest --watch",
    "type-check": "tsc --noEmit",
    "prepare": "husky install",
    "performance-test": "ts-node scripts/performance-test.ts",
    "performance-eval": "npm run performance-test",
    "stress-test": "node scripts/long-text-stress-test.js",
    "stress-test:full": "DEEPSEEK_API_KEY=$DEEPSEEK_API_KEY node scripts/long-text-stress-test.js",
