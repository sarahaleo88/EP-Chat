    "@augmentcode/auggie": "^0.10.1",
    "@headlessui/react": "^1.7.17",
    "@heroicons/react": "^2.0.18",
    "autoprefixer": "^10.4.16",
    "clsx": "^2.1.1",
    "crypto-js": "^4.2.0",
    "dompurify": "^3.2.6",
    "lucide-react": "^0.555.0",
    "marked": "^17.0.1",
    "next": "^15.0.0",
    "next-pwa": "^5.6.0",
    "postcss": "^8.4.31",
    "prom-client": "^15.1.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
