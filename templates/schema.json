{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "EP Template Schema",
  "description": "Schema for EP (Enhanced Prompt) templates",
  "type": "object",
  "required": [
    "schemaVersion",
    "title",
    "scenario",
    "lang",
    "mode",
    "spec"
  ],
  "properties": {
    "schemaVersion": {
      "type": "string",
      "pattern": "^\\d+\\.\\d+\\.\\d+$",
      "description": "Template schema version in semver format"
    },
    "title": {
      "type": "string",
      "minLength": 1,
      "maxLength": 100,
      "description": "Template title"
    },
    "scenario": {
      "type": "string",
      "enum": ["code", "web"],
      "description": "Template scenario type"
    },
    "lang": {
      "type": "string",
      "enum": ["zh", "en"],
      "description": "Template language"
    },
    "mode": {
      "type": "string",
      "enum": ["full", "minimal"],
      "description": "Template mode"
    },
    "spec": {
      "type": "object",
      "required": ["tech", "features", "io", "codeRules"],
      "properties": {
        "tech": {
          "type": "object",
          "required": ["language", "framework"],
          "properties": {
            "language": {
              "type": "string",
              "minLength": 1,
              "description": "Programming language"
            },
            "framework": {
              "type": "string",
              "description": "Framework or library (can be 'N/A')"
            }
          }
        },
        "features": {
          "type": "array",
          "minItems": 1,
          "maxItems": 10,
          "items": {
            "type": "string",
            "minLength": 1
          },
          "description": "List of features"
        },
        "io": {
          "type": "object",
          "required": ["input", "output"],
          "properties": {
            "input": {
              "type": "string",
              "minLength": 1,
              "description": "Input specification"
            },
            "output": {
              "type": "string",
              "minLength": 1,
              "description": "Output specification"
            }
          }
        },
        "codeRules": {
          "type": "array",
          "minItems": 1,
          "maxItems": 10,
          "items": {
            "type": "string",
            "minLength": 1
          },
          "description": "Code rules and standards"
        }
      }
    },
    "description": {
      "type": "string",
      "maxLength": 500,
      "description": "Optional template description"
    },
    "tags": {
      "type": "array",
      "items": {
        "type": "string",
        "minLength": 1
      },
      "description": "Optional tags for categorization"
    },
    "author": {
      "type": "string",
      "description": "Template author"
    },
    "version": {
      "type": "string",
      "pattern": "^\\d+\\.\\d+\\.\\d+$",
      "description": "Template version"
    },
    "created": {
      "type": "string",
      "format": "date-time",
      "description": "Creation timestamp"
    },
    "updated": {
      "type": "string",
      "format": "date-time",
      "description": "Last update timestamp"
    }
  },
  "additionalProperties": false
}
